{
  "manifest_version": 3,
  "name": "LinkedIn Feed Capture",
  "version": "1.0.0",
  "description": "Capture LinkedIn feed for engagement analysis",
  "permissions": ["activeTab", "scripting"],
  "host_permissions": ["https://www.linkedin.com/*"],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://www.linkedin.com/feed/*", "https://www.linkedin.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
}
