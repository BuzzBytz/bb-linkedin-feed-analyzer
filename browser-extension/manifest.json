{
  "manifest_version": 3,
  "name": "Buzz Bytz Feed Capture",
  "version": "1.0.0",
  "description": "Capture your LinkedIn feed for Buzz Bytz analyzer (runs inside the page so scrolling works).",
  "permissions": ["activeTab", "scripting"],
  "host_permissions": [
    "https://www.linkedin.com/*",
    "http://localhost:3001/*",
    "http://127.0.0.1:3001/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://www.linkedin.com/feed*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
